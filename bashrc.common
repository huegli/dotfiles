#########
# Prompt
########

export PS1='\[\e[0;31m\][\h] \[\e[0;34m\][\t] \[\e[1;36m\](\!) \[\e[1;33m\]\w\[\e[0m\] % '

########
# Aliases
#########

alias ll="ls -lhA"
alias dir="ls -l"
alias v="vim"
alias gitssh="eval \`ssh-agent -s\`; ssh-add ~/.ssh/git_id_rsa"
alias h="history +20"
alias lh="history +50"

#############
# Other Stuff
#############
set -o vi

